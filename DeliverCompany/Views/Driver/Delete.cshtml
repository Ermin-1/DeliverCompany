@model Employee

<div class="delete-confirm-container">
    <h2 class="text-center mb-4">Delete Employee</h2>

    <h3 class="text-center text-danger">Are you sure you want to delete this employee?</h3>

    <div class="employee-details text-center">
        <h4>@Model.Name</h4>
        <p>Email: @Model.Email</p>
        <p>Role: @Model.Role</p>
    </div>

    <form asp-action="DeleteConfirmed" class="text-center">
        <input type="hidden" asp-for="EmployeeId" />
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
