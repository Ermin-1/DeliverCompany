@model Driver

<h2>Edit Driver</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DriverID" />

    <div class="form-group">
        <label asp-for="DriverName"></label>
        <input asp-for="DriverName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CarReg"></label>
        <input asp-for="CarReg" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ResponsibleEmployee"></label>
        <input asp-for="ResponsibleEmployee" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TotalBeloppIn"></label>
        <input asp-for="TotalBeloppIn" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label asp-for="TotalBeloppUt"></label>
        <input asp-for="TotalBeloppUt" class="form-control" type="number" step="0.01" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
