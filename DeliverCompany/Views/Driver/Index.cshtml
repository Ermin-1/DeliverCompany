@model IEnumerable<Driver>

<h2>Driver List</h2>

<form method="get">
    <p>
        Search by name: <input type="text" name="searchString" value="@ViewContext.HttpContext.Request.Query["searchString"]" />
    </p>
    <p>
        From Note Date: <input type="date" name="fromNoteDate" value="@ViewContext.HttpContext.Request.Query["fromNoteDate"]" />
        To Note Date: <input type="date" name="toNoteDate" value="@ViewContext.HttpContext.Request.Query["toNoteDate"]" />
    </p>
    <p>
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Driver Name</th>
            <th>Car Registration</th>
            <th>Note Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var driver in Model)
        {
            <tr>
                <td>@driver.DriverName</td>
                <td>@driver.CarReg</td>
                <td>@driver.NoteDate.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Details", new { id = driver.DriverID })">Details</a> |
                    <a href="@Url.Action("Edit", new { id = driver.DriverID })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = driver.DriverID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
